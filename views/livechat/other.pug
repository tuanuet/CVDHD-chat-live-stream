extends ../layout

block content
    h1 Welcome to Live Chat
    p Hệ thống live chat and live chat.
    hr
    .row
        .col-lg-12
            p Phòng chat
        .col-lg-12
            #div-chat
                p Online user:
                ul#ulUser
                h3#my-peer Your Id:
                video#localStream(width='500', controls='')
                video#remoteStream(width='500', controls='')
                br
                br
                input#remoteId(type='text', placeholder='Id người nhận')
                button#btnCall Call

block js
    script.
        window.DATA_RENDER = {};
        window.DATA_RENDER.roomId = '#{roomId}';

    script(src='/socket.io/socket.io.js')
    script(src='/js/lib/peer.js')
    script(src='/js/livechat/other.js')
